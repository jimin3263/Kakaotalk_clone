<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/chat_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_profile"/>
    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/chat_profile"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/chat_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello android"
        android:layout_below="@+id/chat_name"
        android:layout_toRightOf="@id/chat_profile"
        android:layout_marginLeft="16dp"
        android:padding="12dp"
        android:background="@drawable/back_othermsgbox"
        android:maxWidth="250dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:35"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/chat_msg"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/chat_msg"/>

</RelativeLayout>